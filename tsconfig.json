{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "es2018.promise"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "jsx": "react",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}